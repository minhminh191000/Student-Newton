<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- exam -->
    <record id="view_exam_form" model="ir.ui.view">
        <field name="name">exam.form</field>
        <field name="model">student_module.exam</field>
        <field name="arch" type="xml">
            <form string="Exam">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="subject_id"/>
                        <field name="assignment_type"/>
                        <field name="score"/>
                        <field name="date"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_exam_tree" model="ir.ui.view">
        <field name="name">exam.tree</field>
        <field name="model">student_module.exam</field>
        <field name="arch" type="xml">
            <tree string="Exams">
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="assignment_type"/>
                <field name="score"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="action_student_module_exam" model="ir.actions.act_window">
        <field name="name">Exams</field>
        <field name="res_model">student_module.exam</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Create a New Exam
            </p>
        </field>
    </record>
    <!-- exam -->
    <!-- subject -->
    <record id="view_subject_form" model="ir.ui.view">
        <field name="name">subject.form</field>
        <field name="model">student_module.subject</field>
        <field name="arch" type="xml">
            <form string="Subject">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_subject_tree" model="ir.ui.view">
        <field name="name">subject.tree</field>
        <field name="model">student_module.subject</field>
        <field name="arch" type="xml">
            <tree string="Subjects">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="action_student_module_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">student_module.subject</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Create a New Subject
            </p>
        </field>
    </record>
    <!-- subject -->
    <!-- Assigment -->
        <record id="assigment_view_form" model="ir.ui.view">
            <field name="name">assignment.form</field>
            <field name="model">student_module.assignment</field>
            <field name="arch" type="xml">
                <form string="assigment_form">
                    <sheet>
                        <group>
                            <field name="classroom_id" string="Classroom" />
                            <field name="subject_id" widget="many2many_tags" string="Subject" />
                            <field name="date" string="Create Date" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="assigment_view_tree" model="ir.ui.view">
            <field name="name">assigment.tree</field>
            <field name="model">student_module.assignment</field>
            <field name="arch" type="xml">
                <tree string="assigment_tree">
                    <field name="classroom_id" />
                    <field name="subject_id" />
                    <field name="date" />
                </tree>
            </field>
        </record>
        <record id="assigment_view_kanban" model="ir.ui.view">
            <field name="name">assigment.kanban</field>
            <field name="model">student_module.assignment</field>
             <field name="arch" type="xml">
                <kanban>
                   <field name="classroom_id" />
                    <field name="subject_id" />
                    <field name="date" />
             <templates>
             <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        <div class="oe_kanban_details">
                            <div class="o_kanban_record_title">
                                <field name="classroom_id" />
                            </div>
                            <div class="o_kanban_record_subtitle">
                                <field name="subject_id" />
                            </div>
                            <div class="o_kanban_record_subtitle">
                                <field name="date" />
                            </div>
                        </div>
                    </div>
             </t>
             </templates>
             </kanban>
             </field>
        </record>
    <!-- Assigment -->
    <!-- teacher -->
    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">teacher.form</field>
        <field name="model">student_module.teacher</field>
        <field name="arch" type="xml">
              <form string="Student">
                    <sheet>
                        <field name="image" widget='image' class="oe_avatar" />
                        <div class="oe_title">
                                <h1 class="d-flex">
                                    <field name="name" placeholder="Teacher's Name" required="True"/>
                                </h1>
                        </div>
                        <div class="oe_left">
                            <group>
                                <field name="id_teacher" required="True"/>
                                <field name="gender"/>
                                <field name="date_of_birth"/>
                                <field name="phone"/>
                                <field name="homeroom_class"/>
                                                          
                            </group>
                        </div>
                        <notebook>
                            <page name="Asignment" string="Assignment">
                                <field name="assignment" mode="kanban"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
        </field>
    </record>


    <record id="view_teacher_tree" model="ir.ui.view">
        <field name="name">teacher.tree</field>
        <field name="model">student_module.teacher</field>
        <field name="arch" type="xml">
            <tree string="Teachers">
                <field name="name"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>


    <record id="action_student_module_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">student_module.teacher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Create a New Teacher
            </p>
        </field>
    </record>
    <!-- teacher -->

        </data>
</odoo>